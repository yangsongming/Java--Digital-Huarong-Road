<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:background_element="#FFEFFAF6"
    ohos:top_margin="10fp"
    ohos:bottom_margin="10fp"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#BA55D3"
        ohos:layout_alignment="horizontal_center"
        ohos:text="您确定要放弃挑战吗？"
        ohos:text_size="25fp"/>

    <Image
        ohos:height="80fp"
        ohos:width="80fp"
        ohos:top_margin="5fp"
        ohos:id="$+id:albumImage"
        ohos:image_src="$media:pic7"
        ohos:scale_mode="stretch">
    </Image>


    <Button
        ohos:id="$+id:ok_btn"
        ohos:text="是的"
        ohos:top_margin="10fp"
        ohos:text_size="20fp"
        ohos:background_element="$graphic:playbtn"
        ohos:text_color="#FFFFFF"
        ohos:height="match_content"
        ohos:width="70fp"
        >
    </Button>

    <Button
        ohos:id="$+id:no_btn"
        ohos:text="再试试"
        ohos:top_margin="10fp"
        ohos:text_size="20fp"
        ohos:background_element="$graphic:playbtn"
        ohos:text_color="#FFFFFF"
        ohos:height="match_content"
        ohos:width="70fp"
        >
    </Button>



</DirectionalLayout>