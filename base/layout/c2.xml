    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="300vp"
        ohos:width="300vp"
        ohos:layout_alignment="horizontal_center"/>

    <Image
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="5fp"
        ohos:id="$+id:albumImage"
        ohos:image_src="$media:pic7"
        ohos:scale_mode="stretch">
    </Image>

    <Image
        ohos:height="60fp"
        ohos:width="240fp"
        ohos:image_src="$media:attention"
        ohos:layout_alignment="horizontal_center"
        ohos:scale_mode="stretch">
