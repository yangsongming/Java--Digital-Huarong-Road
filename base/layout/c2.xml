<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg2"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:layout_alignment="horizontal_center">
        <Button
            ohos:height="40fp"
            ohos:top_margin="10fp"
            ohos:width="40fp"
            ohos:left_margin="10fp"
            ohos:background_element="$media:backbnt"
            ohos:text_color="#FFFFFF"
            ohos:id="$+id:btn_back">

        </Button>

        <Button
            ohos:height="40fp"
            ohos:width="40fp"
            ohos:top_margin="5fp"
            ohos:left_margin="250fp"
            ohos:background_element="$media:ques"
            ohos:text_color="#FFFFFF"
            ohos:id="$+id:quesbnt">
        </Button>


    </DirectionalLayout>

    <Image
        ohos:height="80fp"
        ohos:width="300fp"
        ohos:top_margin="5fp"
        ohos:image_src="$media:cg2"
        ohos:scale_mode="stretch"
        ohos:layout_alignment="horizontal_center"
        >

    </Image>

