<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:background_element="#FFEFFAF6"
    ohos:top_margin="10fp"
    ohos:bottom_margin="10fp"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#BA55D3"
        ohos:layout_alignment="horizontal_center"
        ohos:text="拼图教程"
        ohos:text_size="25fp"/>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:layout_alignment="horizontal_center"
        ohos:text="  在拼图模式中，您需要先滑动选择想要"
        ohos:text_size="14fp"/>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:layout_alignment="horizontal_center"
        ohos:text="拼的图片以及想要挑战的难度。在选择"
        ohos:text_size="14fp"/>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:layout_alignment="horizontal_center"
        ohos:text="完成后，您将在页面底部的资源区获得"
        ohos:text_size="14fp"/>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:layout_alignment="horizontal_center"
        ohos:text="相应的拼图碎片，接下来您就可以进行"
        ohos:text_size="14fp"/>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:layout_alignment="horizontal_center"
        ohos:text="拼图游戏啦！"
        ohos:text_size="14fp"/>

    <Image
        ohos:height="match_content"
        ohos:id="$+id:tip_image"
        ohos:scale_mode="stretch"
        ohos:width="match_parent">

    </Image>

    <Button
        ohos:id="$+id:ok_btn"
        ohos:text="确定"
        ohos:top_margin="10fp"
        ohos:text_size="20fp"
        ohos:background_element="$graphic:playbtn"
        ohos:text_color="#FFFFFF"
        ohos:height="match_content"
        ohos:width="70fp"
        >
    </Button>




</DirectionalLayout>